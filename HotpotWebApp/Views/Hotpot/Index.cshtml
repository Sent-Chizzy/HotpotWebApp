@model List<HotpotWebApp.Models.Dish>
@{
    ViewData["Title"] = "HotpotIndex";
}

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div>
                    <h4>@item.Name</h4>
                </div>
                <div>
                    <h4>@item.ImageUrl</h4>
                </div>
                    <div>
                    <h4>@item.Price</h4>
                    </div>
            </div>
        }
    </div>
</div>
